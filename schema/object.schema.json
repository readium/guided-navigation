{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://readium.org/guided-navigation/schema/object.schema.json",
  "title": "Readium Guided Navigation Object",
  "type": "object",
  "properties": {
    "audioref": {
      "type": "string",
      "format": "uri-reference"
    },
    "imgref": {
      "type": "string",
      "format": "uri-reference"
    },
    "textref": {
      "type": "string",
      "format": "uri-reference"
    },
    "text": {
      "type": "string"
    },
    "role": {
      "type": ["string", "array"],
      "$ref": "roles.schema.json",
      "items": {
        "type": "string",
        "$ref": "roles.schema.json"
      }
    },
    "children": {
      "type": "array",
      "items": {
        "$ref": "object.schema.json"
      },
      "minItems": 1
    }
  },
  "anyOf": [
    {
      "required": ["audioref"]
    },
    {
      "required": ["imgref"]
    },
    {
      "required": ["textref"]
    },
    {
      "required": ["children"]
    }
  ]
}